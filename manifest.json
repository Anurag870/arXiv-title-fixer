{
  "name": "arXiv title fixer",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Set titles of papers on arXiv as <title> of the pdf-tabs.",
  "icons": {
    "512": "images/waiter512.png"
  },
  "application": {
    "gecko": {
      "id": "arxiv-title-fixer@musicallyut.in"
    }
  },
  "background": {
    "scripts": [ "js/background.js" ],
    "persistent": false
  },
  "permissions": [
    "*://arxiv.org/pdf/*"
  ],
  "content_scripts": [
    {
      "matches": [ 
        "*://arxiv.org/pdf/*" 
      ],
      "js": [
        "js/contentscript.js"
      ],
      "run_at": "document_end"
    }
  ],
  "page_action": {
    "default_icon": {
      "38": "images/waiter38.png"
    },
    "default_title": "Put paper title as tab-title."
  },
  "permissions": [
    "declarativeContent",
    "activeTab",
    "*://arxiv.org/*"
  ]
}
